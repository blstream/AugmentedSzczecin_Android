<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:id="@+id/toolbar"
    app:theme="@style/Toolbar"
    app:popupTheme="@style/WhiteDrawerIconStyle">

    <Spinner
        android:layout_width="wrap_content"
        android:id="@+id/filters"
        android:layout_height="wrap_content">
    </Spinner>

    <ImageView
        android:id="@+id/radius_icon"
        android:src="@drawable/radius_icon"
        android:layout_width="@dimen/toolbar_icon_radius"
        android:layout_height="@dimen/toolbar_icon_radius"
        android:layout_marginRight="@dimen/toolbar_icon_margin"
        android:layout_marginEnd="@dimen/toolbar_icon_margin"
        android:layout_gravity="end" />

    <ImageView
        android:id="@+id/filter_settings"
        android:src="@drawable/filter_settings"
        android:layout_width="@dimen/toolbar_icon_radius"
        android:layout_height="@dimen/toolbar_icon_radius"
        android:layout_alignRight="@+id/radius_icon"
        android:layout_alignEnd="@+id/radius_icon"
        android:layout_marginRight="@dimen/toolbar_icon_margin"
        android:layout_marginEnd="@dimen/toolbar_icon_margin"
        android:layout_gravity="end"/>

    <TextView
        android:id="@+id/filter_button"
        android:layout_width="70dp"
        android:textSize="20dp"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/white"
        android:layout_gravity="start"
        android:text="PokaÅ¼"
        />

</android.support.v7.widget.Toolbar>