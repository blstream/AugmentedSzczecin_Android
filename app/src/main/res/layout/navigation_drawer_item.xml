<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:padding ="10dp">

    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingRight="@dimen/drawer_left_margin"
        android:paddingEnd="@dimen/drawer_left_margin"
        android:paddingStart="@dimen/drawer_left_margin"/>

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/itemIcon"
        android:layout_toEndOf="@+id/itemIcon"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"/>

</RelativeLayout>