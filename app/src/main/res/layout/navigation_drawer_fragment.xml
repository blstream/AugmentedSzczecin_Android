<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_view"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_toolbar_height"
        android:background="@color/blue">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/drawer_user_icon_radius"
            android:layout_height="@dimen/drawer_user_icon_radius"
            android:layout_marginTop="@dimen/drawer_user_icon_margin_top"
            android:layout_marginLeft="@dimen/drawer_toolbar_margin_left"
            android:layout_marginStart="@dimen/drawer_toolbar_margin_left"
            android:src="@drawable/splash" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_marginTop="@dimen/drawer_user_name_margin_top"
            android:layout_marginLeft="@dimen/drawer_toolbar_margin_left"
            android:layout_marginStart="@dimen/drawer_toolbar_margin_left"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:layout_gravity="start"
        android:divider="@android:color/transparent"
        android:id="@+id/drawer_list"
        android:background="@android:color/white"
        tools:context="com.blstream.as.fragment.NavigationDrawerFragment" />


</LinearLayout>
